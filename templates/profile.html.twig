{% extends 'Admin.html.twig' %}

{% block title %}Patient
{% endblock %}

{% block Sidebar %}
	<!-- Sidebar -->
	<div class="sidebar" id="sidebar">
		<div class="sidebar-inner slimscroll">
			<div id="sidebar-menu" class="sidebar-menu">
				<ul>

					<li>
						<a href="{{ path('app_homeAdmin') }}">
							<i class="fe fe-star"></i>
							<span>Tableau de bord</span>
						</a>
					</li>

					<li>
						<a href="{{ path('app_residence_new') }}">
							<i class="fe fe-home"></i>
							<span>Résidences</span>
						</a>
					</li>
					<li>
						<a href="{{ path('app_reservation_index') }}">
							<i class="fe fe-document"></i>
							<span>Reservation</span>
						</a>
					</li>
					<li>
						<a href="{{ path('app_message') }}">
							<i class="fe fe-mail"></i>
							<span>Message</span>
						</a>
					</li>
					<li class="active">
						<a href="{{path ('profile')}}">
							<i class="fe fe-user-plus"></i>
							<span>Profile</span>
						</a>
					</li>


				</ul>
			</div>
		</div>
	</div>
	<!-- /Sidebar -->

{% endblock %}
{% block pageheader %}
	<div class="page-header">
		<div class="row">
			<div class="col-sm-12">

				<ul class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="{{ path('app_homeAdmin') }}">Tableau de bord</a>
					</li>

					<li class="breadcrumb-item active">
						Profile
					</li>
				</ul>

			</div>

		</div>
	</div>
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-12">
			<div class="profile-header">
				<div class="row align-items-center">
					<div class="col-auto profile-image">
						<a href="#">
							<img class="rounded-circle" alt="User Image" src="{{ vich_uploader_asset(app.user, 'imageFile') }}">
						</a>
					</div>
					<div class="col ml-md-n2 profile-user-info">
						<h4 class="user-name mb-0">{{ user.nom }}
							{{ user.prenom }}</h4>
						<h6 class="text-muted">{{user.username}}</h6>

						<div class="col-auto profile-btn">

							<a href="{{path ('profile_edit',{id :app.user.id})}} " class="btn btn-primary">
								Modifier
							</a>
							<a href="{{path ('app_logout')}}" class="btn btn-primary">
								Se déconnecter
							</a>
						</div>


					</div>

				</div>
			</div>
			<div class="profile-menu">
				<ul class="nav nav-tabs nav-tabs-solid">
					<li class="nav-item">
						<a class="nav-link active" data-toggle="tab" href="#per_details_tab">À propos</a>
					</li>

				</ul>
			</div>
			<div
				class="tab-content profile-tab-cont">

				<!-- Personal Details Tab -->
				<div
					class="tab-pane fade show active" id="per_details_tab">

					<!-- Personal Details -->
					<div class="row">
						<div class="col-lg-12">
							<div class="card">
								<div class="card-body">
									<h5 class="card-title d-flex justify-content-between">
										<span>Personal Details</span>

									</h5>
									<div class="row">
										<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Nom</p>
										<p class="col-sm-10">{{user.nom}}</p>
									</div>
									<div class="row">
										<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Prenom</p>
										<p class="col-sm-10">{{user.prenom}}</p>
									</div>

									<div class="row">
										<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Email ID
										</p>
										<p class="col-sm-10">{{user.username}}</p>
									</div>

								</div>
							</div>

							<!-- Edit Details Modal -->

							<!-- /Edit Details Modal -->

						</div>


					</div>
					<!-- /Personal Details -->

				</div>
				<!-- /Personal Details Tab -->


			</div>
		</div>
	</div>
{% endblock %}
