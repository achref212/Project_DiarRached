{% extends 'baseLogin.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="main-wrapper login-body">
		<div class="login-wrapper">
			<div class="container">
				<div class="loginbox">
					<div class="login-left">
						<img class="img-fluid" src="{{asset ('assets/img/ppp/logo.png')}}" alt="Logo">
					</div>
					<div class="login-right">
						<div class="login-right-wrap">
							<h1>Connexion</h1>
							<p class="account-subtitle">Accéder à Votre tableau de bord</p>
							<form method="post">
								{% if error %}
									<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
								{% endif %}

								{% if app.user %}
									<div class="mb-3">
										Vous êtes connecté en tant que
										{{ app.user.userIdentifier }},
										<a href="{{ path('app_logout') }}">Se déconnecter</a>
									</div>
								{% endif %}


								<label for="focus-label">Email</label>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control floating" autocomplete="email" required autofocus>
								<label for="focus-label">mot de passe</label>
								<input type="password" name="password" id="inputPassword" class="form-control floating" autocomplete="current-password" required>

								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								<br>
								<button class="btn btn-primary btn-block btn-lg login-btn" type="submit">
									connexion
								</button>

								<div class="text-center dont-have">Vous n'avez pas de compte ?
									<a href="{{path ('app_registration')}}">Enregistrer</a>
								</div>
								<div class="text-center dont-have">
									<a href="{{path ('app_forgot_password_request')}}">Mot de passe oublier !</a>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
