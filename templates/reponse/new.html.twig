{% endblock %}
{% block pageheader %}
	<!-- Page Header -->
	<div class="page-header">
		<div class="row">
			<div class="col-sm-7 col-auto">
				<h3 class="page-title">Repondre</h3>
				<ul class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="{{ path('app_homeAdmin') }}">Tableau de bord</a>
					</li>
					<li class="breadcrumb-item active">Repondre</li>
				</ul>
			</div>

		</div>
	</div>
	<!-- /Page Header -->

{% endblock %}
{% block body %}
	{{ form_start(form,{'attr': {'novalidate':'novalidate'}}) }}
	<div class="card">
		<div class="card-header">
			<h4 class="card-title">Repondre</h4>
		</div>
		<div class="card-body">
			<div class="page-wrapper">
				<div class="content container-fluid">
					{% if reservation.residence is  null and reservation.appartement is  null %}
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Nom</p>
							<p class="col-sm-10">{{ reservation.nom }}</p>
						</div>
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Prenom</p>
							<p class="col-sm-10">{{ reservation.prenom }}</p>
						</div>
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Telephone</p>
							<p class="col-sm-10">{{ reservation.telephone }}</p>
						</div>
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Email</p>
							<p class="col-sm-10">{{ reservation.email }}</p>
						</div>
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Message</p>
							<p class="col-sm-10">{{ reservation.message }}</p>
						</div>
						<div class="form-group row">
							<p class="col-form-label col-md-2">Votre Reponse :</p>
							<div class="col-md-5">
								{{ form_widget(form.message,{'attr':{'class':'form-control', 'placeholder': 'Message'}})}}
							</div>
						</div>
						<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
					{% else %}
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Residence</p>
							<p class="col-sm-10">{{ reservation.residence}}</p>
						</div>
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Appartement</p>
							<p class="col-sm-10">{{ reservation.appartement}}</p>
						</div>
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Nom</p>
							<p class="col-sm-10">{{ reservation.nom }}</p>
						</div>
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Prenom</p>
							<p class="col-sm-10">{{ reservation.prenom }}</p>
						</div>
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Telephone</p>
							<p class="col-sm-10">{{ reservation.telephone }}</p>
						</div>
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Email</p>
							<p class="col-sm-10">{{ reservation.email }}</p>
						</div>
						<div class="row">
							<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Message</p>
							<p class="col-sm-10">{{ reservation.message }}</p>
						</div>
						<div class="form-group row">
							<p class="col-form-label col-md-2">Votre Reponse :</p>
							<div class="col-md-5">
								{{ form_widget(form.message,{'attr':{'class':'form-control', 'placeholder': 'Message'}})}}
							</div>
						</div>
						<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
					{% endif %}
				</div>
			</div>
		</div>

		{{ form_end(form) }}
	</div>

{% endblock %}
